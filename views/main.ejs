<div class="contacts_card" style="margin-top:1.3%;margin-right:1.3%;height: 97%;">
  <div class="msg_head">
    <div class="d-flex">
      <div class="img_cont">
        <img id="user_image" src="" class="user_img">
        <span class="online_icon"></span>
      </div>
      <div class="user_info">
        <span id="user_name"></span>
        <span id="user_id" class="d-none"></span>
        <span id="user_socketid" class="d-none"></span>
      </div>
    </div>
    <button id="action_menu_btn" type="button" class="chat_close" onclick="javascript:closeChat();">X</button>
  </div>
  <div class="chat_body" id="chat-message-list">
  </div>
  <div class="chat_footer">
    <div class="textbox_div">
      <textarea name="" class="type_msg" placeholder="Type your message..." placeholder="Type a message" id="message-sent" onkeydown="javascript:eventMessage(event,this.value);"></textarea>
      <div class="textbox_div_append">
        <span class="send_btn" onclick="javascript:sendMessage(document.getElementById('message-sent').value);">></span>
      </div>
    </div>
  </div>
</div>