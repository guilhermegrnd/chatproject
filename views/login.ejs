<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Chat-Project</title>
    <link type="text/css" rel="stylesheet" href="/css/login.css">
  </head>
  <body>
    <main>
      <div class="form-login">
        <form class="" action="/" method="POST" id="login-form" style="display:block;">
          <input class="login-input" type="text" name="login-user" onkeypress="javascript:login(event)" placeholder="Username">
          <input class="login-input" type="password" name="login-pass" onkeypress="javascript:login(event)" placeholder="Password">
          <div class="login-div-btn">
            <button class="login-btn" type="button" id="login-btn" onclick="javascript:loginPost()">Login</button>
          </div>
        </form>
        <form class="" action="/account" method="POST" id="account-form" style="display:none;">
          <input class="login-input" type="text" name="account-user" placeholder="Username">
          <input class="login-input" type="password" name="account-pass" placeholder="Password">
          <input class="login-input" type="password" name="account-pass2" placeholder="Confirm Password">
          <div class="login-div-btn">
            <button class="login-btn" type="button" id="account-btn" onclick="javascript:accountPost()">Criar</button>
          </div>
        </form>
        <div class="login-div-btn">
          <button class="login-btn" type="button" id="account-show" onclick="javascript:accountShow()">Criar conta</button>
        </div>
      </div>
      <h1 id="responseLogin"></h1>
    </main>
  </body>
  <script src="/js/login.js" type="text/javascript"></script>
</html> 